/* components/menu-item/menu-item.wxss */
.menu-item {
  display: inline-block;
  width: 100%;
}

.top {
  position: relative;
}

.top .image {
  width: 100%;
  border-radius: 12rpx;
  background-size: cover;
}

.top .playCount {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  color: #fff;
  font-size: 22rpx;
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  background-color: rgba(0, 0, 0, .5);
}

.item .bottom {
  width: 100%;
  font-size: 26rpx;
  /* 显示两行 */
}